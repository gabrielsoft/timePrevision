<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="8dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardBackgroundColor="@color/colorPrimary"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:padding="16dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif-thin"
                android:textSize="28sp"
                android:text="Salvador-BA"
                android:textColor="@color/colorText"
                android:id="@+id/info_city"
                />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="16dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/info_city"
                    android:text="25°"
                    android:fontFamily="sans-serif-thin"
                    android:textSize="82sp"
                    android:textColor="@color/colorText"
                    android:id="@+id/info_temperature"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sunshine"
                    android:layout_toRightOf="@id/info_temperature"
                    android:layout_below="@id/info_city"/>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_below="@id/info_temperature"
                android:text="27° / 21°"
                android:fontFamily="sans-serif-thin"
                android:textSize="26sp"
                android:textColor="@color/colorTemperatureMaxMin"
                android:textStyle="bold"
                android:id="@+id/info_max_min_temperature"
                />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_below="@id/info_max_min_temperature"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.5"
                    android:text="Muito nublado (Noite)"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="@color/colorText"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/sunsetdown"
                            android:text=" 6:06 PM"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/windy"
                            android:text=" 8.00 km/h"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/sunsetup"
                            android:text=" 5:18 AM"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:drawableLeft="@drawable/water"
                            android:text=" 88%"
                            android:fontFamily="sans-serif-thin"
                            android:textSize="12sp"
                            android:textColor="@color/colorText"
                            android:textStyle="bold"
                            />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
